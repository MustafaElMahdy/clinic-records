# Copy this file to .env and fill in your values.
# .env is listed in .gitignore and must never be committed.

# Django core
SECRET_KEY=replace-with-a-long-random-string
DEBUG=False
ALLOWED_HOSTS=yourdomain.onrender.com,dcumed.health

# Database (Render provides this automatically via render.yaml)
DATABASE_URL=postgres://user:password@host:5432/dbname

# CSRF (add your Render URL and custom domain)
CSRF_TRUSTED_ORIGINS=https://yourdomain.onrender.com,https://dcumed.health

# Cloudflare R2 media storage
R2_BUCKET_NAME=documed-media
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com

# Email (leave blank to keep the console backend in development)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DEFAULT_FROM_EMAIL=noreply@dcumed.health
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=SG.xxxxxxxxxxxxxxxxxxxxxxxx
